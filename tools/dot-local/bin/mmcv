#!/usr/bin/env bash

if [ $# -lt 2 ]; then
    echo "Error: Both input and output files are required."
    exit 1
fi

INPUT_FILE="$1"
OUTPUT_FILE="$2"
shift 2

docker run --rm \
  -v "$(pwd):/data" \
  -u "$(id -u):$(id -g)" \
  minlag/mermaid-cli \
  -i "$INPUT_FILE" \
  -o "$OUTPUT_FILE" \
  "$@"
